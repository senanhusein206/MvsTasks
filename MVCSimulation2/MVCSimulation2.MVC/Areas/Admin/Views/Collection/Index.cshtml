@using MVCSimulation2.DAL.Models
@model List<Collection>

<!-- Sales Chart End -->
<!-- Recent Sales Start -->
<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Recent Salse</h6>
            <a href="">Show All</a>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">

                        <th scope="col">#</th>
                        <th scope="col">Img</th>
                        <th scope="col">Name</th>
                        <th scope="col">NewCount</th>
                        <th scope="col">OldCound</th>
                        <th scope="col">Category</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Collection item in Model)
                    {
                        <tr>
                         
                            <td> @item.Id </td>
                            <td> <img src="~/assets/uploadImages/@item.ImgUrl" alt=""></td>
                            <td>@item.Name</td>
                            <td>@item.NewCount</td>
                            <td>@item.OldCount</td>
                            <td>@item.Category</td>
                            <td>

                                <a asp-area="Admin" asp-controller="Collection" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                <a asp-area="Admin" asp-controller="Collection" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                <a asp-area="Admin" asp-controller="Collection" asp-action="Info" asp-route-id="@item.Id" class="btn btn-info">Info</a>
                            </td>
                        </tr>
                    }
                   

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- Recent Sales End -->

      