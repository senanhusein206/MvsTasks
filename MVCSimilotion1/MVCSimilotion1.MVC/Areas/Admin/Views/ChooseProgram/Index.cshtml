                                <a asp-area="Admin" asp-controller="ChooseProgram" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                <a asp-area="Admin" asp-controller="ChooseProgram" asp-action="Info" asp-route-id="@item.Id" class="btn btn-info">Info</a>
                            </td> 
                        </tr>

                    }
                   
